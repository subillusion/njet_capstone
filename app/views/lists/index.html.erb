<p id="notice"><%= notice %></p>

<h1>Task</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
    
    <% if list.completed %>
    
      <tr class= "table-secondary">
        <td class= "striker"><%= list.title %></td>
        <td <%= link_to list.description, edit_list_path(list) %></td>
        <td><%= list.completed %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% else%>
      
      <tr>
        <td><%= list.title %></td>
        <td><%= link_to list.description, edit_list_path(list) %></td>
        <td><%= list.completed %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
     <% end %>
  </tbody>
</table>

<br>

